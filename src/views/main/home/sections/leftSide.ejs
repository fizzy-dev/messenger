<div class="col-sm-3 sidenav no-padding">
<div class="left">
    <div class="top form-group">
        <select class="form-control" id="select-type-chat">
            <option data-target="#all-chat" value="all-chat">Toàn bộ trò chuyện</option>
            <option data-target="#user-chat" value="user-chat">Trò chuyện cá nhân</option>
            <option data-target="#group-chat" value="group-chat">Trò chuyện nhóm</option>
        </select>
        <a href="#groupChatModal" class="create-group-chat" data-toggle="modal" 
            title="Tạo một nhóm trò chuyện mới"></a>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="all-chat">   <!--tat cac loai tro chuyen-->
            <ul class="people no-padding-start">
            <% allConversations.forEach(function(item){%>
                <% if(item.members){%>
                    <a href="#uid_<%=item._id%>" class="room-chat" data-target="#to_<%=item._id%>">
                       <li class="person group-chat" data-chat="<%=item._id%>">
                            <div class="left-avatar">
                                <!-- <div class="dot"></div> -->
                                <img src="images/users/group-avatar-trungquandev.png" alt="">
                             </div>
                             <span class="name">
                                 <span class="group-chat-name">Group:
                                 </span>
                                 <% if(item.name.length>15){%>
                                <%=item.name.substr(0,14)%><span>...</span>
                                <% }else{ %>
                                <%=item.name%>
                                <%}%>
                               </span>
                             <span class="time">Hai giờ trước</span>
                             <span class="preview">Chào cả nhóm</span>
                         </li>
                     </a> 
                <%}else{%>
                    <a href="#uid_<%=item._id%>" class="room-chat" data-target="#to_<%=item._id%>">
                     <li class="person" data-chat="<%=item._id%>">
                        <div class="left-avatar">
                            <div class="dot"></div>
                            <img src="images/users/<%=item.avatar%>" alt="">
                            </div>
                        <span class="name">
                         
                          <%= item.username %>
                        </span>
                        <span class="time">Một phút trước</span>
                      <span class="preview">Xin chào</span>
                  </li>
                </a>
                    <%}%>
            <%})%>  
            </ul>
            </ul>
                <hr>
                  <div class="read-more-all-chat">
                    <a href="#" id="link-read-more-all-chat">
                    <strong>Xem thêm</strong> 
                   </a>
                  <div class="read-more-all-chat-loader"><div></div><div></div></div>
              </div>
              <hr>
        </div>
        <div class="tab-pane" id="user-chat"> <!--tat cac loai tro chuyen ca nhan-->
            <ul class="people no-padding-start">
                <% userConversations.forEach(function(item){%>
                <a href="#uid_<%=item._id%>" class="room-chat" data-target="#to_<%=item._id%>">
                    <li class="person" data-chat="<%=item._id%>">
                        <div class="left-avatar">
                            <div class="dot"></div>
                            <img src="images/users/<%=item.avatar%>" alt="">
                            </div>
                        <span class="name">
            
                          <%= item.username%>
                        </span>
                        <span class="time">Một phút trước</span>
                      <span class="preview">Xin chào</span>
                  </li>
                </a>
                <%})%>
            </ul>
            </ul>
                <hr>
                  <div class="read-more-user-chat">
                    <a href="#" id="link-read-more-user-chat">
                    <strong>Xem thêm</strong> 
                   </a>
                  <div class="read-more-user-chat-loader"><div></div><div></div></div>
              </div>
              <hr>
        </div>
        <div class="tab-pane" id="group-chat"> <!--tat cac loai tro chuyen nhom -->
          <ul class="people no-padding-start">
            <% groupConversations.forEach(function(item){%>
            <a href="#uid_<%=item._id%>" class="room-chat" data-target="#to_<%=item._id%>">
                       <li class="person group-chat" data-chat="<%=item._id%>">
                            <div class="left-avatar">
                                <!-- <div class="dot"></div> -->
                                <img src="images/users/group-avatar-trungquandev.png" alt="">
                             </div>
                             <span class="name">
                                 <span class="group-chat-name">Group:</span> 
                                 <% if(item.name.length>15){%>
                                <%=item.name.substr(0,14)%><span>...</span>
                                <% }else{ %>
                                <%=item.name%>
                                <%}%>
                              </span>
                             <span class="time">Hai giờ trước</span>
                             <span class="preview">Chào cả nhóm</span>
                         </li>
                     </a>
            <%})%>
            </ul>
                <hr>
                  <div class="read-more-group-chat">
                    <a href="#" id="link-read-more-group-chat">
                    <strong>Xem thêm</strong> 
                   </a>
                  <div class="read-more-group-chat-loader"><div></div><div></div></div>
              </div>
              <hr>
        </div>
    </div>
</div>
</div>